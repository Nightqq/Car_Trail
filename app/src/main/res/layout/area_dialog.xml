<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="区域修改"
        android:textSize="20sp" />
    <EditText
        android:digits="1234567890"
        android:id="@+id/area_dialog_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="区域id">
    </EditText>
    <EditText
        android:id="@+id/area_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="区域名称">
    </EditText>

    <EditText
        android:id="@+id/area_dialog_prison"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="所属监狱"/>
    <EditText
        android:id="@+id/area_dialog_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="区域范围">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/area_btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定" />

        <Button
            android:id="@+id/area_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>